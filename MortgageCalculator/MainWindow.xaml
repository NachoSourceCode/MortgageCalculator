<Window x:Class="MortgageCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortgageCalculator"
        mc:Ignorable="d"
        Title="SloneCalc" Height="450" Width="800"
        Background="CadetBlue">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Border  BorderBrush="DarkSlateGray" BorderThickness="3" HorizontalAlignment="Left" Height="69" Margin="10,21,0,0" VerticalAlignment="Top" Width="772"/>
        <Label x:Name="lbl_Title" Content=" Mortgage Calculator " HorizontalAlignment="Left" Margin="37,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.25,0.019" FontSize="18" FontFamily="Calibri"/>
        <Label x:Name="lbl_MonthlyCost" Content=" Monthly Cost " HorizontalAlignment="Left" Margin="37,53,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Period" Content=" Period " HorizontalAlignment="Left" Margin="343,105,0,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="lbl_Interest" Content=" Interest " HorizontalAlignment="Left" Margin="194,105,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_MortgageAmount" Content=" Mortgage Amount " HorizontalAlignment="Left" Margin="37,105,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_MonthlyPayments" Content=" Monthly Payments " HorizontalAlignment="Left" Margin="223,264,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Calculate" Content=" Calculte " BorderBrush="DarkSlateGray" Background="CadetBlue" HorizontalAlignment="Left" Margin="343,299,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="Button_Click_1"/>
        <TextBox x:Name="Amount" BorderBrush="DarkSlateGray" Background="CadetBlue" HorizontalAlignment="Left" Height="23" Margin="44,136,0,0" TextWrapping="Wrap" Text=" Ex: 100000 " VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="Interest" BorderBrush="DarkSlateGray" Background="CadetBlue" HorizontalAlignment="Left" Height="23" Margin="194,136,0,0" TextWrapping="Wrap" Text=" Ex: 3.92 " VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="Period" BorderBrush="DarkSlateGray" Background="CadetBlue" HorizontalAlignment="Left" Height="23" Margin="343,136,0,0" TextWrapping="Wrap" Text=" Ex: 30 " VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="MonthlyPayments" BorderBrush="DarkSlateGray" Background="CadetBlue" HorizontalAlignment="Left" Height="23" Margin="343,264,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="96"/>

    </Grid>
</Window>
